    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Unix-Ninja)",
            "type": "shell",
            "command": "ninja",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
        },
        {
            "label": "Build (Unix-Make)",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
        }
    ]
}